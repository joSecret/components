{#
/**
 * @file
 * Template for the main page.
 */
#}
{% set page_style  = (style != '') ? ['page-style_' ~ style] : [] %}

{% set page_attributes = attributes ?: create_attribute() %}

{% set
  page_classes = [
    'page-docs',
  ]|merge(page_style)|merge(page_uc ?: [])
%}

<div {{ page_attributes.addClass(page_classes) }}>
  {% block slot_header %}
    {% if header %}
      <header class="pb-mob pd--header">
        {{- header -}}
      </header>
    {% endif %}
  {% endblock %}

  {% block slot_sidebar %}
    {% if sidebar %}
      <div class='pb-mob pd--sidebar'>
        {{- sidebar -}}
      </div>
    {% endif %}
  {% endblock %}

  {% block slot_nav %}
    {% if nav %}
      <nav class='pb-mob pd--nav'>
        {{- nav -}}
      </nav>
    {% endif %}
  {% endblock %}

  {% block slot_header_top %}
    {% if header_top %}
      <div class='pd--header-top'>
        {{- header_top -}}
      </div>
    {% endif %}
  {% endblock %}

  {% block slot_branding %}
    {% if branding %}
      <div class='pd--branding'>
        {{- branding -}}
      </div>
    {% endif %}
  {% endblock %}

  {% block slot_content %}
    {% if content %}
      <main class='pd--main'>
        {{- content -}}
      </main>
    {% endif %}
  {% endblock %}

  {% block slot_footer %}
    {% if footer %}
      <footer class='pd--footer'>
        {{- footer -}}
      </footer>
    {% endif %}
  {% endblock %}

  {% block slot_mobile_menu %}
    <div class='page-docs--mob-menu'>
      <ul class='list-inline'>
        <li>
          {%- include "versatile:button" with {
            content: 'Open/close sidebar',
            icon_position: 'only',
            expanded: 'false',
            aria_control: 'pd--sidebar',
            icon: "<svg
                xmlns='http://www.w3.org/2000/svg'
                width='24'
                height='24'
                viewBox='0 0 24 24'
                ><path
                  d='M20 3H4c-1.103 0-2 .897-2 2v14c0 1.103.897 2 2 2h16c1.103 0 2-.897 2-2V5c0-1.103-.897-2-2-2zM4 19V7h6v12H4zm8 0V7h8V5l.002 14H12z'
                ></path><path d='M6 10h2v2H6zm0 4h2v2H6z'></path></svg
              >"
          } -%}
        </li>

        <li>
          {%- include "versatile:button" with {
            content: 'Open/close search',
            icon_position: 'only',
            expanded: 'false',
            aria_control: 'pd--header',
            icon: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16"><path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/></svg>'} -%}
        </li>

        <li>
          {%- include "versatile:button" with {
            content: 'Open/close navigation',
            icon_position: 'only',
            expanded: 'false',
            aria_control: 'pd--nav',
            icon: "<svg
                width='24'
                height='24'
                viewBox='0 0 24 24'
                fill='none'
                xmlns='http://www.w3.org/2000/svg'
              >
                <path
                  d='M22 18.0048C22 18.5544 21.5544 19 21.0048 19H12.9952C12.4456 19 12 18.5544 12 18.0048C12 17.4552 12.4456 17.0096 12.9952 17.0096H21.0048C21.5544 17.0096 22 17.4552 22 18.0048Z'
                  fill='currentColor'></path>
                <path
                  d='M22 12.0002C22 12.5499 21.5544 12.9954 21.0048 12.9954H2.99519C2.44556 12.9954 2 12.5499 2 12.0002C2 11.4506 2.44556 11.0051 2.99519 11.0051H21.0048C21.5544 11.0051 22 11.4506 22 12.0002Z'
                  fill='currentColor'></path>
                <path
                  d='M21.0048 6.99039C21.5544 6.99039 22 6.54482 22 5.99519C22 5.44556 21.5544 5 21.0048 5H8.99519C8.44556 5 8 5.44556 8 5.99519C8 6.54482 8.44556 6.99039 8.99519 6.99039H21.0048Z'
                  fill='currentColor'></path>
              </svg>"
          } -%}
        </li>
      </ul>
    </div>
  {% endblock %}
</div>
