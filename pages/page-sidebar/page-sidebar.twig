{#
/**
 * @file
 * Template for the main page.
 */
#}
{% set page_attributes = attributes ?: create_attribute() %}
{% set
  page_classes = [
    'page',
  ]|merge(page_utility_classes ?: [])
%}

<div {{ page_attributes.addClass(page_classes) }}>
  {% block page_sidebar %}
    <div class="sidebar">
      <div class="sticky">
        {{ page.branding }}
        {{ page.nav_main }}
      </div>
    </div>
  {% endblock %}

  {% block page_navigation %}
    <div class="navigation sticky">
      {{ page.nav_additional }}
    </div>
  {% endblock %}

  {% block page_content %}
    <div class="content">
      {% include 'versatile:page-content' with {
        page_main_utility_classes: ['py-5'],
        page_header_container_utility_classes: ['mb-3'],
      }%}
    </div>
  {% endblock %}
</div>
